/* 搜索 */
.searchBox {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 50rpx;
  align-items: center;
}
.font10 {
  margin-left: 10rpx;
  font-size: 10px;
}

.searchBox-input {
  display: flex;
  margin-left: 40rpx;
  background: #fafafa;
  height: 70rpx;
  line-height: 70rpx;
  width: 450rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  color: #a4a4a4;
}
.searchBox-input text {
  margin-right: 20rpx;
}
/* 幻灯片 */
.swiper-img image {
  width: 750rpx;
  height: 350rpx;
}
/* 图标导航 */
.icon-nav {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 50rpx;
  background: #fff;
}

.icon-nav navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-nav image {
  width: 120rpx;
  height: 120rpx;
}

.icon-nav text {
  font-size: 12px;
}
/* 租房小组 */
.renting-group {
  margin-top: 3px;
  background: #fff;
}
.renting-group-nav {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f5f5f5;
  padding: 0 40rpx;
}
.renting-group-nav-title {
  font-size: 26px;
  font-weight: bold;
}
.renting-group-nav-more {
  color: #787d82;
  font-size: 16px;
}
.renting-group-itme {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.renting-group-itme image {
  width: 330rpx;
  height: 135rpx;
}
/* 推荐房源 */
.sview {
  height: 1000rpx;
}
.recommend {
  margin-top: 3px;
  background: #fff;
  color: #474747;
}

.recommend-title {
  font-size: 22px;
  font-weight: bold;
}
.recommend-search {
  display: flex;
  justify-content: space-around;
  height: 90rpx;
  line-height: 90rpx;
}
.recommend-list {
  border-top: 1px solid #cccccc;
  display: flex;
  padding: 20rpx;
}
.recommend-list image {
  width: 350rpx;
  height: 250rpx;
}

.recommend-list-item {
  margin-left: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.recommend-list-item-spec {
  color: #ccc;
  font-size: 14px;
}
.recommend-list-item-tag text {
  margin: 6rpx;
}
.recommend-list-item-price {
  color: red;
}
.recommend-list-item-price text {
  font-weight: bold;
}

.tag1 {
  padding: 10rpx;
  background: #c5eddc;
  color: #5ecc9f;
  font-size: 12px;
  border-radius: 5px;
}
.tag2 {
  padding: 10rpx;
  background: #c3ebf0;
  color: #39becd;
  font-size: 12px;
  border-radius: 5px;
}
.tag3 {
  padding: 10rpx;
  background: #cde6fe;
  color: #5aabfd;
  font-size: 12px;
  border-radius: 5px;
}

/* 回到顶部 */
.gototop {
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  color: #999;
  opacity: 0;
  /* 过渡动画 */
  transition: all .6s;
}
.go_now {
  opacity: 1;
  /* 过渡动画 */
  transition: all .6s;
}
.font30 {
  font-size: 40px;
}

.nav {
  position: relative;
}
.shadediv {
  background: #fff;
  width: 750rpx;
  height: 300rpx;
  position: absolute;
  top: 80rpx;
  z-index: 0;
  display: flex;
  opacity: 0;
  transition: all 1s;
}
.now {
  transition: all 1s;
  opacity: 1;
  z-index: 1000;
}
